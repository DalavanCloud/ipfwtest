#!/usr/bin/env ruby19

require 'ipfw'
require 'pp'

#pp fw

#fw.verbose = true

#fw.rule! 9970, "skipto 9981 tcp from 192.168.113.250 to 62.165.61.10"

# 192.168.241.166.1184 > 62.165.61.10.3128

r = nil

if ARGV.size > 0
  p = Packet.from_string( ARGV.join(' '))
  fw = IPFW.from_system :verbose => true, :max_table_id => 10
  r = fw.packet! p
else
  fw = IPFW.from_system :verbose => true, :max_table_id => 10
  r = fw.packet!(
    :protocol => :tcp,
    :to => '62.165.61.1',
    :from => '10.0.1.2',
    :dst_port => 21,
    :src_port => 2765
  )
end

puts "r = #{r.inspect}"
